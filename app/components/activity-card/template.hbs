<div class="when"><span class="{{actionIcon}}"></span> {{date}} â€¢ {{time}}</div>

<div class="content">

    <div class="what">

        {{#if isProfileView}}

            <div class="profile-wrap"><img class="profile" src="{{programProfileImage}}"></div>

            <div class="action-type">

                <a href="#">{{activity.program.college.name}}</a> viewed your profile

            </div>

        {{/if}}

        {{#if isUserFavorited}}

            <div class="profile-wrap"><img class="profile" src="{{profileImage}}"></div>

            <div class="action-type">

                <b>You</b> favorited <a href="#">{{activity.program.college.name}}</a>

            </div>

        {{/if}}


    </div>

    <div class="school">

        <div class="image">

            <div class="wrap"><img src="{{schoolImage}}"></div>

        </div>

        <div class="info">

            <div class="wrap">

                <p><strong>{{activity.program.college.name}}</strong></p>

                <p>

                    <strong>Location:</strong> {{activity.program.city}},{{activity.program.state}}<br>

                    <strong>Division:</strong> {{activity.program.division.name}}

                </p>

                <p><a href="#">View School Profile</a></p>

            </div>

        </div>

    </div>

</div>

<div class="controls">

    <a href="#0" onclick={{action "favorite"}} class="icon-heart -favorite {{isFavorite}}"> {{favState}} college</a>

    <a href="#0" onclick={{action "message"}} class="icon-paper-plane -message"> message college</a>

</div>
